---
const { classes, ...rest } = Astro.props;
---


<button class:list={["btn", classes]} {...rest}>
    <span><slot/></span>
</button>

<style>

button{
    position: relative;
    background: linear-gradient(
        90deg,
        var(--clr-lime-green),
        var(--clr-bright-cyan)
    );
    color: var(--clr-white);
    font-size: var(--fs-14);
    font-weight: var(--fw-bold);
    padding: 0.8rem 2rem;
    display: flex;
    align-items: center;
    border: 0;
    border-radius: 100vh;
    overflow: hidden;
    width: max-content;
}

button span{
    z-index: 1;
}

button::after{
    content: '';
    width: 100%;
    height: 100%;
    position: absolute;
    left:0;
    top: 0;   
    background: var(--clr-white);
    opacity: 0;
    transition: opacity 0.3s ease;
}

button:hover::after{
    opacity: 0.4;
}


</style>