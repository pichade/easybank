---
import articles from "../../datas/articles.json";
---


  {articles.map((article) => (
    <div class="article grid-flow">
      <img src={article.cover} alt={article.title}  class="cover"/>
      <div class="article-infos grid-flow">
          <p class="author">By {article.author}</p>
          <h3 class="article-title"><a href="/">{article.title}</a></h3>
          <p class="article-description">{article.descr}</p>
      </div>
    </div>
  ))}

  <style>

    .article{
        --gap:1rem;
    }

    .article-infos{
        width: 90%;
        margin-inline: auto;
         --gap:0.4rem;
    }

    img{
        width: 100%;
        max-height: 200px;
        object-fit: cover;
        margin-block-end: 0.5rem;
    }

    .author{
        font-size: var(--fs-10);
    }

    .article-title{
        font-size: var(--fs-16);
        line-height: var(--line-height-100);
        transition: 0.2s ease;
    }

    .article-title:hover{
        color: var(--clr-lime-green);
    }

    .article-description{
        font-size: var(--fs-13);
    }

  </style>